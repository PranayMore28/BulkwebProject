@model List<Category> 

    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category list</h2>
            </div>
            <div>
               <a asp-action="Create"  class="btn btn-primary"> Create New Category</a>
            </div>
        </div>
    </div>  
<table class="table table-bordered table-striped">
   <thead>
        <tr>
            <th>Category name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
   </thead> 
   <tbody>
        @foreach(var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Name</td>
                 <td>@obj.DisplayOrder</td>
                 <td><div class="btn-group" role="group"></div>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                    Edit
                 </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">
                        Delete
                    </a>
                 </td>
             </tr>
        }
    </tbody>
</table>